@page
@model CategoriesModel
@{
    ViewData["Title"] = "Categories";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<div class="text-center">
    <h1 class="display-4">Search by Category</h1>
    <text>@ViewData["Test"]</text>

    <input type="text" @bind-value="@searchTerm" />
    <input type="button" value="Search" @onclick="@SearchIssues"/>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <h1>Name</h1>
                </th>
                <th>
                    <h1>CurrencyId</h1>
                </th>
                <th>
                    <h1>Slug</h1>
                </th>
                <th>
                    <h1>Symbol</h1>
                </th>
            </tr>
        </thead>
        @if (CategoriesModel.Categories == null)
        {
            <p>
                <em>Loading...</em>
            </p>
        }
        else
        {
            @foreach (Entities.Category category in CategoriesModel.Categories) 
            {
                <tbody>
                    @foreach (Entities.Currency currency in category) 
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(currency => currency.CurrencyName)
                            </td>
                            <td>
                                @Html.DisplayFor(currency => currency.CurrencyId)
                            </td>
                            <td>
                                @Html.DisplayFor(currency => currency.Slug)
                            </td>
                            <td>
                                @Html.DisplayFor(currency => currency.Symbol)
                            </td>
                        </tr>
                    }
                </tbody>
            }
        }
    </table>
</div>
@code 
{
    private string searchTerm;
    private List<Issue> issues;

    async Task SearchIssues()
    {
        issues = await issuesController.SearchIssuesAsync(searchTerm);
    }
}
