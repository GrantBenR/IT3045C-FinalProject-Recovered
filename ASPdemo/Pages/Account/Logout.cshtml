@page
@using ASPdemo.Pages.Account;
@model ASPdemo.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="logoutForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2> We hate to see you go</h2>
            <button id="logoutSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Logout</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}