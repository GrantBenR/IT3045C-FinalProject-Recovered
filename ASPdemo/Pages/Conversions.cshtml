@{
    ViewData["Title"] = "Categories";

    var maxId = ViewData["MaxId"];
    var pageId = ViewData["PageId"]; 
    var searchTerm1 = ViewData["SearchTerm1"]; 
    var searchTerm2 = ViewData["SearchTerm2"]; 

    var url1 = "/Categories/?MaxId=" + maxId + "&PageId=" + pageId;

